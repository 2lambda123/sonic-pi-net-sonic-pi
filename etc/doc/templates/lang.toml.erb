# This is a data file that contains information describing the text that is
# displayed on pages in the Lang section of Sonic Pi's help panel.

# Below is a description of the possible text items that can appear on these pages:

# - summary: Either a short phrase describing this Sonic Pi function, or just its
# name. (Eg the 'chord' function has a summary phrase: 'Create chord')

<%
  summary = (item[:summary] || item[:name]).to_s
  summary[0] = summary[0].capitalize
%>
[<%= item[:name] %>]
summary = "<%= summary %>"
<% item[:args].each do |name, type| %>
[[<%= item[:name] %>.args]]
name = "<%= name %>"
type = "<%= type %>"
<% end %>
doc = '''
<%= item[:doc] %>
'''
[<%= item[:name] %>.introduced]
label = "Introduced in "
version = "<%= item[:introduced].to_s %>"
<% if item[:opts] && !item[:opts].empty? %>
[<%= item[:name] %>.options]
label = "Options"
<% item[:opts].each do |name, doc| %>
[[<%= item[:name] %>.options.list]]
name = "<%= name.to_s %>"
doc = "<%= doc %>"
<% end %>
<% end %>
[<%= item[:name] %>.examples]
label = "Example"
label_plural = "Examples"
<% item[:examples].each_with_index do |e, index| %>
[[<%= item[:name] %>.examples.list]]
label = "<%= "Example #{index + 1}" %>"


<% end %>
